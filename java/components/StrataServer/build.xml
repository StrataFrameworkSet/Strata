<project 
	xmlns:artifact="antlib:org.apache.maven.artifact.ant"
	name="StrataServer" 
	default="run-commit-stage">
	
	<import file="../../component-targets.xml"/>
	
	<target name="define-properties">
		
	    <property name="source.dir" value="src"/>
	    <property name="output.dir" value="bin"/>
	    <property name="distribution.dir" value="lib"/>
	    
	    <property name="artifact.name" value="${ant.project.name}-${version}"/>
	    <property name="component.artifact" value="${distribution.dir}/${artifact.name}.jar"/>
	    <property name="common.artifact" value="../StrataCommon/lib/StrataCommon-${version}.jar"/>
	    <property name="injector.artifact" value="../StrataInjector/lib/StrataInjector-${version}.jar"/>
	    <property name="integrator.artifact" value="../StrataIntegrator/lib/StrataIntegrator-${version}.jar"/>
		
		<artifact:pom 
			name="Strata Application Framework"
			id="${ant.project.name}" 
			groupId="strata1" 
			artifactId="${ant.project.name}" 
			version="${version}">
	        <dependency groupId="com.google.inject" artifactId="guice" version="4.0-beta"/>
	        <dependency groupId="javax.inject" artifactId="javax.inject" version="1"/>
	        <dependency groupId="org.springframework" artifactId="spring-core" version="3.0.6.RELEASE"/>
	        <dependency groupId="org.springframework" artifactId="spring-context-support" version="3.0.6.RELEASE"/>
	    </artifact:pom>
			
		<artifact:dependencies 
	    	pathId="partial.classpath"
	    	pomRefId="${ant.project.name}"/>

		<path 
		    id="dependency.classpath">
			<pathelement location="${common.artifact}" /> 
	        <pathelement location="${injector.artifact}" /> 
	        <pathelement location="${integrator.artifact}" /> 
			<path refid="partial.classpath"/> 
	    </path>
		
		<property name="component.classpath" value="dependency.classpath"/>
		
	</target>
    
</project>	
