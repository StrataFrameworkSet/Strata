    <target 
        name="init"
        depends="define-properties">
        <mkdir dir="${output.dir}"/>
        <mkdir dir="${test.reports}"/>
    </target>

    <target 
        name="clean"
        depends="define-properties">
        <delete dir="${output.dir}"/>
    	<delete file="${test.artifact}"/>
    </target>
	
	<target 
		name="compile" 
		depends="init">
        <copy todir="${output.dir}">
            <fileset 
                dir="${source.dir}"
                includes="**/*.xml,**/*.properties,**/*.txt,**/*.ico"/>
        </copy>        
	    <javac 
			srcdir="${source.dir}" 
			destdir="${output.dir}" 
			classpathref="${test.classpath}" 
			compiler="${compiler}"
			includeantruntime="false"/>
	</target>
	
	<target
	    name="package"
	    depends="compile">
	    <jar 
	    	destfile="${test.artifact}"
		    basedir="${output.dir}"/>
	</target>

    <target
        name="install-to-local-repository"
        depends="package">
		<artifact:writepom 
		    pomRefId="${ant.project.name}" 
		    file="${output.dir}/${ant.project.name}-pom.xml" />
		<artifact:pom 
		    id="${ant.project.name}-pomfile" 
		    file="${output.dir}/${ant.project.name}-pom.xml" />       	
		<artifact:install 
			file="${test.artifact}">
			<pom refid="${ant.project.name}-pomfile"/>
            <localRepository path="${repository.dir}"/> 
		</artifact:install>  
    </target>
	
	<target 
		name="run-commit-stage"
		depends="install-to-local-repository">
		<junit 
			printsummary="true" 
			showoutput="true" 
			haltonfailure="true">
		    <formatter type="brief" usefile="false"/>
		    <formatter type="xml"/>
		    <classpath>
		        <pathelement location="${test.artifact}"/>
		        <path refid="${test.classpath}"/>
		    </classpath>
		    <test 
		    	todir="${test.reports}" 
		        name="${commit.test.suite}"/>
		    </junit>
		    <junitreport 
		    	todir="${test.reports}">
		        <fileset dir="${test.reports}">
		            <include name="TEST-*.xml"/>
		        </fileset>
		        <report format="frames" todir="${test.reports}"/>
		    </junitreport>
		</target>
	
    <target 
        name="run-integration-stage"
    	depends="run-commit-stage">
		<junit 
			printsummary="true" 
			showoutput="true" 
			haltonfailure="true">
		    <formatter type="brief" usefile="false"/>
		    <formatter type="xml"/>
		    <classpath>
		        <pathelement location="${test.artifact}"/>
		        <path refid="${test.classpath}"/>
		    </classpath>
		    <test 
		    	todir="${test.reports}" 
		        name="${integration.test.suite}"/>
		    </junit>
		    <junitreport 
		    	todir="${test.reports}">
		        <fileset dir="${test.reports}">
		            <include name="TEST-*.xml"/>
		        </fileset>
		        <report format="frames" todir="${test.reports}"/>
		    </junitreport>
    </target>

    <target name="deploy-to-local-repository"/>
    
    <target name="deploy-to-remote-repository"/>
    
</project>	
