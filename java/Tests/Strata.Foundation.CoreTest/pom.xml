<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>strataframework.org</groupId>
    <artifactId>Strata.Foundation.CoreTest</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>12</maven.compiler.source>
        <maven.compiler.target>12</maven.compiler.target>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>confluent</id>
            <name>Confluent</name>
            <url>http://packages.confluent.io/maven/</url>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>strataframework.org</groupId>
                                    <artifactId>Strata.Foundation.Core</artifactId>
                                    <version>1.0-SNAPSHOT</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${basedir}/schema/imported</outputDirectory>
                                    <includes>**\/*.avsc</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.avro</groupId>
                <artifactId>avro-maven-plugin</artifactId>
                <version>1.9.1</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>schema</goal>
                        </goals>
                        <configuration>
                            <stringType>String</stringType>
                            <dateTimeLogicalTypeImplementation>jsr310</dateTimeLogicalTypeImplementation>
                            <sourceDirectory>${basedir}/schema/subjects</sourceDirectory>
                            <sourceDirectory>${basedir}/schema/imported</sourceDirectory>
                            <outputDirectory>${basedir}/generated/</outputDirectory>
                            <fieldVisibility>PRIVATE</fieldVisibility>
                            <imports>
                                <import>${basedir}/schema/imported/EventIdentifiersData.avsc</import>
                                <import>${basedir}/schema/imported/StandardEventType.avsc</import>
                                <import>${basedir}/schema/imported/ExceptionData.avsc</import>
                                <import>${basedir}/schema/subjects/FooData.avsc</import>
                                <import>${basedir}/schema/subjects/FooEvent.avsc</import>
                           </imports>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/src</source>
                                <source>${basedir}/generated</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <excludes>
                        <exclude>${basedir}/target/classes/strata/foundation/core/event/EventIdentifiersData.class</exclude>
                        <exclude>${basedir}/target/classes/strata/foundation/core/event/StandardEventType.class</exclude>
                        <exclude>${basedir}/target/classes/strata/foundation/core/event/ExceptionData.class</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.confluent</groupId>
                <artifactId>kafka-schema-registry-maven-plugin</artifactId>
                <version>5.3.1</version>
                <configuration>
                    <schemaRegistryUrls>
                        <param>https://dev-kafka-schema.aws.hautelook.net:8081</param>
                    </schemaRegistryUrls>
                    <subjects>
                        <FooEvent>${basedir}/schema/subjects/FooEvent.avsc</FooEvent>
                    </subjects>
                    <subjectPatterns>
                        <subjectPattern>EventIdentifiersData</subjectPattern>
                        <subjectPattern>StandardEventType</subjectPattern>
                        <subjectPattern>ExceptionData</subjectPattern>
                    </subjectPatterns>
                    <imports>
                        <import>${basedir}/schema/imported/EventIdentifiersData.avsc</import>
                        <import>${basedir}/schema/imported/StandardEventType.avsc</import>
                        <import>${basedir}/schema/imported/ExceptionData.avsc</import>
                        <import>${basedir}/schema/subjects/FooData.avsc</import>
                    </imports>
                    <outputDirectory>${basedir}/schema/imported</outputDirectory>
                </configuration>
                <goals>
                    <goal>register</goal>
                    <goal>download</goal>
                </goals>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>strataframework.org</groupId>
            <artifactId>Strata.Foundation.Core</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant-junit</artifactId>
            <version>1.8.2</version>
        </dependency>
        <dependency>
            <groupId>args4j</groupId>
            <artifactId>args4j</artifactId>
            <version>2.33</version>
        </dependency>
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.8.2</version>
        </dependency>
        <dependency>
            <groupId>org.kohsuke</groupId>
            <artifactId>asm3</artifactId>
            <version>3.3.0</version>
        </dependency>
    </dependencies>
    
</project>