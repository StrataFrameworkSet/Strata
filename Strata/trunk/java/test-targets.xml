    <target 
        name="init"
        depends="define-properties">
        <mkdir dir="${output.dir}"/>
        <mkdir dir="${test.reports}"/>
    </target>

    <target 
        name="clean"
        depends="define-properties">
        <delete dir="${output.dir}"/>
    	<delete file="${test.artifact}"/>
    </target>
	
	<target 
		name="compile" 
		depends="init">
		<javac 
			srcdir="${source.dir}" 
			destdir="${output.dir}" 
			classpathref="${test.classpath}" 
			compiler="${compiler}"
			includeantruntime="false"/>
	</target>
	
	<target
	    name="package"
	    depends="compile">
	    <jar 
	    	destfile="${test.artifact}"
		    basedir="${output.dir}"/>
	</target>
	
	<target 
		name="run-commit-stage"
		depends="package">
		<junit 
			printsummary="true" 
			showoutput="true" 
			haltonfailure="true">
		    <formatter type="brief" usefile="false"/>
		    <formatter type="xml"/>
		    <classpath>
		        <pathelement location="${test.artifact}"/>
		        <path refid="${test.classpath}"/>
		    </classpath>
		    <test 
		    	todir="${test.reports}" 
		        name="${commit.test.suite}"/>
		    </junit>
		    <junitreport 
		    	todir="${test.reports}">
		        <fileset dir="${test.reports}">
		            <include name="TEST-*.xml"/>
		        </fileset>
		        <report format="frames" todir="${test.reports}"/>
		    </junitreport>
		</target>
	
    <target 
        name="run-integration-stage"
    	depends="init">
		<junit 
			printsummary="true" 
			showoutput="true" 
			haltonfailure="true">
		    <formatter type="brief" usefile="false"/>
		    <formatter type="xml"/>
		    <classpath>
		        <pathelement location="${test.artifact}"/>
		        <path refid="${test.classpath}"/>
		    </classpath>
		    <test 
		    	todir="${test.reports}" 
		        name="${integration.test.suite}"/>
		    </junit>
		    <junitreport 
		    	todir="${test.reports}">
		        <fileset dir="${test.reports}">
		            <include name="TEST-*.xml"/>
		        </fileset>
		        <report format="frames" todir="${test.reports}"/>
		    </junitreport>
    </target>
    
</project>	
