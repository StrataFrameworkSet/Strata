<project 
	xmlns:artifact="antlib:org.apache.maven.artifact.ant"
	name="StrataPersistence" 
	default="run-commit-stage">
	
	<import file="../../component-targets.xml"/>
	
	<target name="define-properties">
		
	    <property name="source.dir" value="src"/>
	    <property name="output.dir" value="bin"/>
	    <property name="distribution.dir" value="lib"/>
	    <property name="version" value="DEV"/>
	    <property name="artifact.name" value="${ant.project.name}-${version}"/>
	    <property name="component.artifact" value="${distribution.dir}/${artifact.name}.jar"/>
	    <property name="common.artifact" value="../StrataCommon/lib/StrataCommon-${version}.jar"/>
		
	    <artifact:dependencies pathId="partial.classpath">
	        <artifact:dependency groupId="org.springframework" artifactId="spring-orm" version="3.0.6.RELEASE"/>
	        <artifact:dependency groupId="org.springframework" artifactId="spring-core" version="3.0.6.RELEASE"/>
	        <artifact:dependency groupId="org.springframework" artifactId="spring-context-support" version="3.0.6.RELEASE"/>
	        <artifact:dependency groupId="org.hibernate" artifactId="hibernate-core" version="4.1.7.Final"/>
	        <artifact:dependency groupId="org.hibernate.common" artifactId="hibernate-commons-annotations" version="4.0.1.Final"/>
	        <artifact:dependency groupId="org.hibernate" artifactId="hibernate-annotations" version="3.5.6-Final"/>
	        <artifact:dependency groupId="org.hibernate" artifactId="hibernate-tools" version="3.6.0.CR1"/>
	        <artifact:dependency groupId="mysql" artifactId="mysql-connector-java" version="5.1.21"/>
	        <artifact:dependency groupId="org.javassist" artifactId="javassist" version="3.17.0-GA"/>
	        <artifact:dependency groupId="org.slf4j" artifactId="slf4j-simple" version="1.6.1"/>
	    </artifact:dependencies>
		
		<path 
		    id="dependency.classpath">
			<pathelement location="${common.artifact}" /> 
			<path refid="partial.classpath"/> 
	    </path>
		
		<property name="component.classpath" value="dependency.classpath"/>
		
	</target>
    
</project>	
